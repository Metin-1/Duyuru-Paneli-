@{
    Layout = null;
}
@model Login2.Models.DuyuruModel

<!doctype html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Duyurular</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center my-4">Duyurular</h1>

        <form asp-action="Guncelle" method="post" class="p-4 border rounded shadow-sm bg-light" onsubmit="submitForm(event)>
            <ul class="list-group">
                @for (int i = 0; i < Model.Textboxes.Count; i++)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @Html.HiddenFor(m => m.Ids[i])
                        <input type="text" name="Textboxes[@i]" value="@Model.Textboxes[i]" class="form-control w-75" />
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="CheckBoxes[@i]" value="true" @(Model.CheckBoxes[i] ? "checked" : "") />
                            <input type="hidden" name="CheckBoxes[@i]" value="false" />
                        </div>
                    </li>
                }
            </ul>
            <button type="submit" class="btn btn-primary mt-3 w-100">Güncelle</button>
             
        </form>
    </div>

     <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNRAKwf4YKcn+V+xT4F/E24n0JbW7yRAE1lyr/otmH3SLvF08QOjSoG1gAa5dx6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGZ9aysjODp3zHBrgW6y18KvvkTHm2Ct3MoLwBjBB4Gm8s4eRh5o6y9p1c" crossorigin="anonymous"></script>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- jQuery ekleyin -->
 <script>

    document.getElementById('guncelleButton').addEventListener('click', function () {
        document.getElementById('yayinFrame').contentWindow.location.reload(); // iframe içindeki sayfayı yeniler
    });



 </script>